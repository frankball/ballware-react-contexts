{
    "name": "@ballware/react-contexts",
    "version": "6.0.0-beta3",
    "description": "Ballware Application Builder - React contexts for meta and identity",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "lint": "eslint \"src/**/*.{js,ts,tsx}\" --fix"
    },
    "files": [
        "dist/**/*"
    ],
    "exports": {
        "./": "./dist/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/frankball/ballware-react-contexts.git"
    },
    "keywords": [],
    "author": "frank@ballmeyer.com",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/frankball/ballware-react-contexts/issues"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.10.0",
        "@typescript-eslint/parser": "^4.10.0",
        "eslint": "^7.16.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "@types/react": "^17.0.0",
        "react": "^17.0.1",
        "@ballware/meta-interface": "^6.0.0-alpha11",
        "@ballware/identity-interface": "^6.0.0-alpha2"
    },
    "homepage": "https://github.com/frankball/ballware-react-contexts#readme",
    "prettier": {
        "semi": true,
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "settings": {
            "react": {
                "version": "detect"
            }
        },
        "extends": [
            "plugin:react/recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier/@typescript-eslint",
            "plugin:prettier/recommended"
        ],
        "ignorePatterns": [
            "node_modules",
            "dist",
            "spec"
        ]
    }
}
